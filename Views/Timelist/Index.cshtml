@model IEnumerable<TimeTrace.Models.TimeRegisterModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Employee Timelists</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SearchString">Search by project name:</label>
        <input type="text" name="SearchString" value=""/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
    
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["UserSortParam"]">
                @Html.DisplayNameFor(model => model.User)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ProjectSortParam"]">
                @Html.DisplayNameFor(model => model.Project.Name)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
        </tr>
}
    </tbody>
</table>

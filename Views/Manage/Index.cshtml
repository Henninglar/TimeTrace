@model email

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Manage employees</h2>

<form method="post">

    <div class="form-floating">
        <input asp-for="Subject" class="form-control" aria-required="true" />
        <label asp-for="Subject"></label>
        <span asp-validation-for="Subject" class="text-danger"></span></div>
    
      <div class="form-floating">
            <textarea asp-for="Message" cols="40" rows="3" class="form-control" aria-required="true"></textarea>
            <label asp-for="Message"></label>
            <span asp-validation-for="Message" class="text-danger"></span></div>
    
    
     
      
    <button id="registerSubmit" type="submit" class="btn btn-primary">Send reminder to all users</button>
                            </form>
 
   <strong color="white">@ViewBag.Message</strong>

